<!DOCTYPE html>
<html lang="en" class="custom-cursor">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="myicon.ico"/>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    />
    <link rel="stylesheet" href="css/footer.css" />
    <link rel="stylesheet" href="css/navbar.css" />
    <link rel="stylesheet" href="css/style.css" />
    <style>
      main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 100px);
      }
      header {
        margin-bottom: 50px;
      }
    </style>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>

    <title>Toyota</title>
  </head>
  <body>
    <header>
      <div id="nav-placeholder"></div>
    </header>

    <main>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h3 data-i18n="contactUsTitle"></h3>
            <p data-i18n="contactUsContent"></p>
          </div>
          <div class="col-md-6">
            <form id="contactForm">
              <div class="mb-3">
                <label for="name" class="form-label" data-i18n="nameLabel"></label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  placeholder="Your Name"
                />
                <div id="nameError" class="text-danger mt-1 small" data-i18n="nameError"></div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label" data-i18n="emailLabel"></label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="Your Email"
                />
                <div id="emailError" class="text-danger mt-1 small" data-i18n="emailError"></div>
              </div>
              <div class="mb-3">
                <label for="message" class="form-label" data-i18n="messageLabel"></label>
                <textarea
                  class="form-control"
                  id="message"
                  rows="4"
                  placeholder="Your Message"
                ></textarea>
                <div id="messageError" class="text-danger mt-1 small" data-i18n="messageError"></div>
              </div>
              <button type="submit" class="btn btn-info" data-i18n="submitButton"></button>
            </form>
          </div>
        </div>
      </div>
    </main>

    <div id="footer-placeholder"></div>

    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"
    ></script>
    <script type="text/javascript" src="js/email.js"></script>
    <script type="text/javascript" src="js/contact-validation.js"></script>


    <script src="js/footer.js"></script>
    <script src="js/navbar.js"></script>

    <!-- Language -->
    <script src="js/i18n/jquery.i18n.js"></script>
    <script src="js/i18n/jquery.i18n.messagestore.js"></script>
    <script src="js/i18n/jquery.i18n.fallbacks.js"></script>
    <script src="js/i18n/jquery.i18n.language.js"></script>
    <script src="js/i18n/jquery.i18n.parser.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.bidi.js"></script>
    <script src="js/i18n/languages/ru.js"></script>
    <script src="js/global.js"></script>
  </body>
</html>
