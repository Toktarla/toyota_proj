<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Toyota</title>
    <link rel="icon" type="image/x-icon" href="myicon.ico"/>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="dashboard-header text-center" data-i18n="enhancedAdminDashboard">Enhanced Admin Dashboard</h1>
      <div class="row">
        <div class="d-flex justify-content-center mb-3">
            <a href="/main" class="btn btn-primary btn-custom" data-i18n="goToMainPage">Go to Main Page</a>
          </div>
          <select id="lang-select" class="form-select form-select-sm" aria-label=".form-select-sm example">
            <option value="en">English</option>
            <option value="ru">Русский</option>
        </select>
          <div class="d-flex justify-content-center mb-3">
            <a href="/car-crud" class="btn btn-primary btn-custom" data-i18n="goToItemChanging">Go To Item Changing</a>
          </div>
      </div>
      <div class="table-responsive">
        <table class="table table-custom align-middle">
          <thead>
            <tr>
              <th data-i18n="userName">Username</th>
              <th data-i18n="email">Email</th>
              <th data-i18n="status">Status</th>
              <th data-i18n="actions">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user){ %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <span
                  class="status-badge <%= user.adminStatus ? 'status-admin' : 'status-user' %>"
                >
                  <%= user.adminStatus ? 'Admin' : 'User' %>
                </span>
              </td>
              <td class="table-actions">
                <button
                  class="btn btn-info btn-custom"
                  onclick="location.href='/edit-user/<%= user._id %>'"
                >
                  <i class="fas fa-edit"></i> 
                </button>
                <button
                  class="btn btn-danger btn-custom"
                  onclick="location.href='/delete-user/<%= user._id %>'"
                >
                  <i class="fas fa-trash-alt"></i> 
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Language -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/i18n/jquery.i18n.js"></script>
    <script src="js/i18n/jquery.i18n.messagestore.js"></script>
    <script src="js/i18n/jquery.i18n.fallbacks.js"></script>
    <script src="js/i18n/jquery.i18n.language.js"></script>
    <script src="js/i18n/jquery.i18n.parser.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.bidi.js"></script>
    <script src="js/i18n/languages/ru.js"></script>
    <script src="js/global.js"></script>
  </body>
</html>
