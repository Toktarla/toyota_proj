<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Toyota</title>
    <link rel="icon" type="image/x-icon" href="myicon.ico"/>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/navbar.css" />
    <link rel="stylesheet" href="css/search.css" />
    <link rel="stylesheet" href="css/footer.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div id="nav-placeholder" class="mb-5"></div>
    
    <!-- Search options -->
    <div
      id="searchByYearMake"
      class="search-section animate__animated animate__fadeInLeft"
    >
      <h2 data-i18n="searchByYearMakeTitle">Search Cars by Year and Make</h2>
      <input type="text" id="year" placeholder="Enter Year" />
      <input type="text" id="make" placeholder="Enter Make" />

      <button
        onclick="searchByYearMake()"
        class="bg-danger"
        data-i18n="searchButton"
      >
        Search
      </button>
      <div id="searchByYearMakeResult" class=""></div>
    </div>

    <div
      id="searchByYearMakeModel"
      class="search-section animate__animated animate__fadeInLeft"
      style="display: none"
    >
      <h2 data-i18n="searchByYearMakeModelTitle">
        Search Cars by Year, Make, and Model
      </h2>
      <input type="text" id="yearModel" placeholder="Enter Year" />
      <input type="text" id="makeModel" placeholder="Enter Make" />
      <input type="text" id="model" placeholder="Enter Model" />
      <button
        onclick="searchByYearMakeModel()"
        class="bg-danger"
        data-i18n="searchButton"
      >
        Search
      </button>
      <div id="searchByYearMakeModelResult" class=""></div>
    </div>

    <div
      id="searchByColor"
      class="search-section animate__animated animate__fadeInLeft"
      style="display: none"
    >
      <h2 data-i18n="searchByColorTitle">Search Cars by Color</h2>
      <input type="text" id="yearColor" placeholder="Enter Year" />
      <input type="text" id="makeColor" placeholder="Enter Make" />
      <input type="text" id="modelColor" placeholder="Enter Model" />
      <input type="text" id="color" placeholder="Enter Color" />
      <button
        onclick="searchByColor()"
        class="bg-danger"
        data-i18n="searchButton"
      >
        Search
      </button>
      <div id="searchByColorResult" class=""></div>
    </div>

    <div
      id="searchByFuel"
      class="search-section animate__animated animate__fadeInLeft"
      style="display: none"
    >
      <h2 data-i18n="searchByFuel">Search Cars by Fuel Type</h2>
      <input type="text" id="modelFuelTransmission" placeholder="Enter Model" />
      <input type="text" id="fuelType" placeholder="gas, diesel, electricity" />

      <button
        onclick="searchByFuel()"
        class="bg-danger"
        data-i18n="searchButton"
      >
        Search
      </button>
      <div id="searchByFuelResult"></div>
    </div>

    <div class="text-center mt-2">
      <button
        class="btn btn-primary me-2 rounded-pill px-4 py-2"
        id="backButton"
        style="display: none"
        data-i18n="backButton"
      >
        Back
      </button>
      <button
        class="btn btn-primary rounded-pill px-4 py-2"
        id="nextButton"
        data-i18n="nextButton"
      >
        Next
      </button>
    </div>

    <div id="footer-placeholder" style="margin-top: 10rem"></div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="js/navbar.js"></script>
    <script src="js/footer.js"></script>
    <script src="js/search.js"></script>
    <!-- Language -->
    <script src="js/i18n/jquery.i18n.js"></script>
    <script src="js/i18n/jquery.i18n.messagestore.js"></script>
    <script src="js/i18n/jquery.i18n.fallbacks.js"></script>
    <script src="js/i18n/jquery.i18n.language.js"></script>
    <script src="js/i18n/jquery.i18n.parser.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.bidi.js"></script>
    <script src="js/i18n/languages/ru.js"></script>
    <script src="js/global.js"></script>
  </body>
</html>
