<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toyota</title>
    <link rel="icon" type="image/x-icon" href="myicon.ico"/>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/admin.css">
    <style>
        /* Add custom styles here */
        .btn-custom {
            margin-right: 5px;
        }
        .table th,
        .table td {
            vertical-align: middle;
        }
        .table-actions {
            white-space: nowrap;
        }
        .shorten-text {
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;">

        <div>
            <a href="/add-car" class="btn btn-danger" style="margin-right: 2rem;">Add a Car</a>
        </div>
        <div>
            <a href="/admin" class="btn btn-danger" style="">Go back To Admin</a>
        </div>
      </div>
<div class="container">
    <div class="row mt-3">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Name (English)</th>
                    <th>Name (Russian)</th>
                    <th>Description (English)</th>
                    <th>Description (Russian)</th>
                    <th>Picture URL</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% cars.forEach(function(car) { %>
                <tr>
                    <td><%= car.name.en %></td>
                    <td><%= car.name.ru %></td>
                    <td><%= car.description.en %></td>
                    <td><%= car.description.ru %></td>
                    <td class="shorten-text"><%= car.pictureUrl %></td>
                    <td><%= car.type %></td>
                    <td class="table-actions">
                        <a href="/edit-car/<%= car._id %>" class="btn btn-primary btn-sm btn-custom">Edit</a>
                        <form action="/delete-car/<%= car._id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm btn-custom">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
